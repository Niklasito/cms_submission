@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models.Blocks;
@using Umbraco.Cms.Core.Models

   <!-- Meet team section -->

    <section class="team-section">
        <div class="container team-container">
            <div class="row mt-5">
                <div class="small-heading">
                    <p>Meet Our Team</p>
                </div>
            </div>
            <div class="row d-flex justify-content-center mb-5">
                <div class="col-12 col-md-6 team-members-heading">
                    <h2>Experienced Team Members</h2>
                </div>
                <div class="col-12 col-md-6 d-flex justify-content-end team-browser">
                    <a href="#" class="btn-transparent">Browse Team <i class="fa fa-arrow-up-right"></i></a>
                </div>
            </div>
            <div class="row d-flex justify-content-evenly">

                @Html.GetBlockListHtml(Model.StaffMembers)

            </div>
        </div>

        <div class="container reviews-container">
            <div class="row">
                <div class="col-12 reviews-small-heading">
                    <p>@Model.Value("customerReviewsTitle")</p>
                </div>
                <div class="col-12 reviews-big-heading">
                    <h2>@Model.Value("customerReviewsHeading")</h2>
                </div>
            </div>
            <div class="row d-flex justify-content-evenly">
                
                @Html.GetBlockListHtml(Model.CustomerReviews)
                
            </div>
            <div class="row reviews-button">
                <div class="col-12 d-flex mt-5 justify-content-center reviews-button-holder">
                    <a href="@Model.Value("customerReviewsButtonUrl")"class="btn-black">@Model.Value("customerReviewsButtonText")<i class="fa fa-arrow-up-right"></i></a>
                </div>
            </div>
        </div>


    </section>
