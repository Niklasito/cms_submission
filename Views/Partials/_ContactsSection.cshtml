
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{

    var contactForm = new cms_submission.Models.ContactForm();

}

    <!-- Contactinformation section -->
    <section class="contact-section">
        <div class="container">
            <div class="row contact-first-row">
                <div class="col-3 contact-box">
                    <div class="col-12  contact-subheadings">
                        <i class="fa fa-location-dot subheading-icon"></i>
                        <h6>Visit Us</h6>
                    </div>
                    <div class="col-12 contact-information">
                        <p>@Model.Value("contactInformationStreetName")</p>
                        <p>@Model.Value("contactInformationPostalCode") @Model.Value("contactInformationCity")</p>
                    </div>
                </div>
                <div class="col-3 contact-box">
                    <div class="col-12 contact-subheadings">
                        <i class="fa fa-phone subheading-icon"></i>
                        <h6>Call us</h6>
                    </div>
                    <div class="col-12 contact-information">
                        <p>@Model.Value("contactInformationPhoneNumber1")</p>
                        <p>@Model.Value("contactInformationPhoneNumber2")</p>
                    </div>
                </div>
                <div class="col-3 contact-box">
                    <div class="col-12 contact-subheadings">
                        <i class="fa fa-envelope subheading-icon"></i>
                        <h6>Email us</h6>
                    </div>
                    <div class="col-12 contact-information">
                        <p>@Model.Value("contactInformationEmail1")</p>
                        <p>@Model.Value("contactInformationEmail2")</p>
                    </div>
                </div>
            </div>
            <div class="row contact-second-row">
                <div class="col-12 contact-form">
                    <h2>Leave us a message</h2>
                    <h2 class="second-subheading">for any information</h2>

                    @using (Html.BeginUmbracoForm("Index", "Contacts", FormMethod.Post))
                    {
                    
                        <div asp-validation-summary="All"></div>
                        
                        <input asp-for="@contactForm.Name" type="text" placeholder="Name" >
                        <input asp-for="@contactForm.Email" type="email" placeholder="Email">
                        <textarea asp-for="@contactForm.Message" placeholder="Your message" rows="10" cols="50" resize="none"></textarea>
                        <button type="submit" class="btn-theme">Send Message <i class="fa fa-arrow-up-right"></i></button>
                     }
                </div>
            </div>
        </div>
    </section>



    <!-- Contactinformation section end -->

    <!-- Map section -->
    <div class="container-fluid">
        
            <iframe src="@Model.Value("googleMapUrl")" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        
    </div>
    
    <!-- Map Section End -->
